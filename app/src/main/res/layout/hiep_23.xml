<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:weightSum="100"
    android:orientation="vertical"
    android:padding="20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:weightSum="100"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageButton
            android:id="@+id/ic_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:src="@drawable/ic_return"
            android:textSize="30sp"
            android:layout_marginTop="4dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="My Order"
            android:textSize="28sp"
            android:layout_toRightOf="@id/ic_return"
            android:textColor="@color/extrathicc_smoke"
            />
        </RelativeLayout>
    </LinearLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="13">

            <androidx.cardview.widget.CardView
                android:id="@+id/burger"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintWidth_percent="0.2"
                app:layout_constraintHeight_percent="0.9"

                app:cardCornerRadius="12dp">

                <ImageView

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="18"
                    android:scaleType="centerCrop"
                    android:src="@drawable/burger"
                    />

            </androidx.cardview.widget.CardView>
            <TextView
                    android:id="@+id/txt_burger"
                    android:layout_marginLeft="4dp"
                    app:layout_constraintLeft_toRightOf="@id/burger"
                    app:layout_constraintTop_toTopOf="@id/burger"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Burger King"
                    android:paddingLeft="10dp"/>
            <ImageView
                android:id="@+id/star"
                app:layout_constraintTop_toBottomOf="@id/txt_burger"
                app:layout_constraintLeft_toRightOf="@id/burger"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_star"
                android:paddingLeft="10dp"/>
            <TextView
                android:id="@+id/txt_rating"
                android:layout_marginTop="3dp"
                app:layout_constraintLeft_toRightOf="@id/star"
                app:layout_constraintTop_toBottomOf="@id/txt_burger"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.9"
                android:textColor="@color/orange"
                android:textStyle="bold"/>
            <TextView
                android:layout_marginLeft="3dp"
                app:layout_constraintLeft_toRightOf="@id/txt_rating"
                app:layout_constraintBottom_toBottomOf="@id/txt_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(124 ratings)"
                android:textColor="@color/smoke"/>
            <TextView
                android:id="@+id/txt_burger2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Burger"
                android:textColor="@color/smoke"
                app:layout_constraintTop_toBottomOf="@id/star"
                app:layout_constraintStart_toEndOf="@id/burger"
                android:layout_marginLeft="4dp"
                android:paddingLeft="10dp"
                />
            <TextView
                app:layout_constraintStart_toEndOf="@id/txt_burger2"
                app:layout_constraintBottom_toBottomOf="@id/txt_burger2"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Western food"
                android:textColor="@color/smoke"/>
            <ImageView

                android:id="@+id/clock"
                app:layout_constraintTop_toBottomOf="@id/txt_burger2"
                app:layout_constraintStart_toStartOf="@id/txt_burger2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_time"
                android:paddingLeft="8dp"
                />
            <TextView
                app:layout_constraintStart_toEndOf="@id/clock"
                app:layout_constraintTop_toTopOf="@id/clock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No 03, 4th Lane, New York"
                android:textColor="@color/smoke"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="2dp"
                />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:weightSum="100"
        android:orientation="horizontal"
        android:background="@color/gray_background">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="90"
            android:text="Beef Burger x1"
            android:paddingVertical="10dp"
            android:textColor="@color/thicc_smoke"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:text="19$"
            android:textColor="@color/black_google"
            android:textStyle="bold"
            android:paddingVertical="10dp"
            android:paddingLeft="10dp"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:background="@color/gray_line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:weightSum="100"
        android:orientation="horizontal"
        android:background="@color/gray_background">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="90"
            android:text="Classic Burger x1"
            android:paddingVertical="10dp"
            android:textColor="@color/thicc_smoke"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:text="19$"
            android:textColor="@color/black_google"
            android:textStyle="bold"
            android:paddingVertical="10dp"
            android:paddingLeft="10dp"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:background="@color/gray_line"/>
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="6"
    android:weightSum="100"
    android:orientation="horizontal"
    android:background="@color/gray_background">
    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="90"
        android:text="Cheese Chicken Burger x1"
        android:paddingVertical="10dp"
        android:textColor="@color/thicc_smoke"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="10"
        android:text="19$"
        android:textColor="@color/black_google"
        android:textStyle="bold"
        android:paddingVertical="10dp"
        android:paddingLeft="10dp"
        />
</LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:background="@color/gray_line"/>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="6"
    android:weightSum="100"
    android:orientation="horizontal"
    android:background="@color/gray_background">
    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="90"
        android:text="Chicken Legs Bucket x1"
        android:paddingVertical="10dp"
        android:textColor="@color/thicc_smoke"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="10"
        android:text="19$"
        android:textColor="@color/black_google"
        android:textStyle="bold"
        android:paddingVertical="10dp"
        android:paddingLeft="10dp"
        />
</LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:background="@color/gray_line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:weightSum="100"
        android:orientation="horizontal"
        android:background="@color/white">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:text="Delivery Instruction"
            android:paddingVertical="10dp"
            android:textColor="@color/extrathicc_smoke"
            android:textStyle="bold"
            />
        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"/>
        <Button

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:background="@color/white"
            android:text="+ Add notes"
            android:textAllCaps="false"
            android:textColor="@color/orange"
            />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:background="@color/gray_line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:weightSum="100"
        android:orientation="horizontal"
        android:background="@color/white">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="90"
            android:text="Sub Total"
            android:paddingVertical="10dp"
            android:textColor="@color/extrathicc_smoke"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:text="19$"
            android:textColor="@color/orange"
            android:textStyle="bold"
            android:paddingVertical="10dp"
            android:paddingLeft="10dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:weightSum="100"
        android:orientation="horizontal"
        android:background="@color/white">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="90"
            android:text="Delivery Cost"
            android:paddingVertical="10dp"
            android:textColor="@color/extrathicc_smoke"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:text="19$"
            android:textColor="@color/orange"
            android:textStyle="bold"
            android:paddingVertical="10dp"
            android:paddingLeft="10dp"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:background="@color/gray_line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:weightSum="100"
        android:orientation="horizontal"
        android:background="@color/white">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="85"
            android:text="Total"
            android:paddingVertical="20dp"
            android:textColor="@color/extrathicc_smoke"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="15"
            android:text="19$"
            android:textSize="18dp"
            android:textColor="@color/orange"
            android:textStyle="bold"
            android:paddingVertical="20dp"
            android:paddingLeft="20dp"
            />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:background="@color/orange"
        android:layout_marginHorizontal="30dp"
        app:cardCornerRadius="40dp">
    <Button

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/orange"
        android:text="Checkout"
        android:textAllCaps="false"
        android:textColor="@color/white"
        />
    </androidx.cardview.widget.CardView>






</LinearLayout>