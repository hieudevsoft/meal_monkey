<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLayoutItemOptions"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        app:cardUseCompatPadding="true"
        app:cardElevation="6dp"
        android:layout_gravity="start"
        app:cardCornerRadius="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imageMostPopular"
            android:scaleType="centerCrop"
            android:src="@drawable/image_popular_restaurant_1"
            android:layout_width="180dp"
            android:layout_height="100dp"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_marginStart="12dp"
        android:textSize="14sp"
        android:id="@+id/textNameFoodMostPopular"
        android:textStyle="bold"
        android:textColor="@color/black_facebook"
        android:fontFamily="@font/metropolis_medium"
        android:layout_gravity="start"
        android:text="Minute by tuk tuk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_marginStart="6dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="12sp"
            android:id="@+id/textTypeFoodMostPopular"
            android:fontFamily="@font/metropolis_light"
            android:layout_gravity="center_vertical"
            android:textColor="@color/grey"
            android:text="Coffe"
            android:layout_marginStart="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:layout_gravity="center_vertical"
            android:layout_marginStart="6dp"
            android:backgroundTint="@color/main_color"
            android:background="@drawable/custom_button_login"
            android:layout_width="6dp"
            android:layout_height="3dp"/>
        <TextView
            android:textSize="12sp"
            android:id="@+id/textResMostPopular"
            android:fontFamily="@font/metropolis_light"
            android:layout_gravity="center_vertical"
            android:textColor="@color/grey"
            android:text="Western Food"
            android:layout_marginStart="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Space
            android:layout_width="6dp"
            android:layout_height="6dp"/>
        <ImageView
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_baseline_star_24"
            android:layout_width="16dp"
            android:layout_height="16dp"/>
        <TextView
            android:textSize="12sp"
            android:id="@+id/textAveRatingMostPopular"
            android:fontFamily="@font/metropolis_light"
            android:layout_gravity="center_vertical"
            android:textColor="@color/main_color"
            android:text="4.9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>