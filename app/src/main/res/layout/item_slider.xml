<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageSlide"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintHeight_percent="0.5"
        android:src="@drawable/image_findfoodlove"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <TextView
        android:id="@+id/tvHeaderSlide"
        android:layout_marginTop="20dp"
        android:textColor="@color/black_facebook"
        android:fontFamily="@font/metropolis_regular"
        android:textSize="30sp"
        android:text="@string/header_on_boarding_1"
        app:layout_constraintTop_toBottomOf="@id/imageSlide"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tvTextSlide"
        android:layout_marginTop="20dp"
        android:letterSpacing="0.05"
        android:textAlignment="center"
        android:lineHeight="18dp"
        android:textColor="@color/black_facebook"
        android:fontFamily="@font/metropolis_light"
        android:textSize="14sp"
        android:text="@string/text_on_boarding_1"
        app:layout_constraintTop_toBottomOf="@id/tvHeaderSlide"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>